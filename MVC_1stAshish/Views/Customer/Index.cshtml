@model IEnumerable<MVC_1stAshish.Models.Location>
@{ }


<table class="table table-bordered">
    <tr>
        <th>
            Location</th>
            <th>Details
        </th>
    </tr>
    @foreach (var location in Model)
    {
        <tr>
            <td>
                <a asp-action="CustomerList" asp-controller="customer" asp-route-id="@location.ID">@location.PLACE </a>
            </td>
            <td>
                @location.DETAILS
            </td>


        </tr>
    }
</table>

